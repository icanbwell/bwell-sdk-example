<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/view_profile_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.ui.profile.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_rectangle_green"
        android:padding="30dp">

        <!-- Name TextView -->
        <TextView
            android:id="@+id/textViewName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Arun Kumar"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Email -->
        <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/textViewEmailData"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewName"/>

        <TextView
            android:id="@+id/textViewEmailData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="right"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/textViewEmail"
            app:layout_constraintTop_toBottomOf="@+id/textViewName" />

        <!-- Sex -->
        <TextView
            android:id="@+id/textViewSex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/sex"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/textViewSexData"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewEmailData" />

        <TextView
            android:id="@+id/textViewSexData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="right"
            app:layout_constraintStart_toEndOf="@+id/textViewSex"
            app:layout_constraintTop_toBottomOf="@+id/textViewEmailData" />

        <!-- Phone Number -->
        <TextView
            android:id="@+id/textViewPhoneNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/phone_number"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/textViewPhoneNumberData"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewSexData" />

        <TextView
            android:id="@+id/textViewPhoneNumberData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="123-456-7890"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="right"
            app:layout_constraintStart_toEndOf="@+id/textViewPhoneNumber"
            app:layout_constraintTop_toBottomOf="@+id/textViewSexData" />

        <!-- Date of Birth -->
        <TextView
            android:id="@+id/textViewDateOfBirth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/date_of_birth"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/textViewDateOfBirthData"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewPhoneNumberData" />

        <TextView
            android:id="@+id/textViewDateOfBirthData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="01/01/1990"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="right"
            app:layout_constraintStart_toEndOf="@+id/textViewDateOfBirth"
            app:layout_constraintTop_toBottomOf="@+id/textViewPhoneNumberData" />

        <!-- Age -->
        <TextView
            android:id="@+id/textViewAge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/age"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/textViewAgeData"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewDateOfBirthData" />

        <TextView
            android:id="@+id/textViewAgeData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="30"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="right"
            app:layout_constraintStart_toEndOf="@+id/textViewAge"
            app:layout_constraintTop_toBottomOf="@+id/textViewDateOfBirthData" />

        <!-- Address -->
        <TextView
            android:id="@+id/textViewAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/address"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/textViewAddressData"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewAgeData" />

        <TextView
            android:id="@+id/textViewAddressData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="123 Main St, City, Country"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textViewAddress"
            android:gravity="right"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/textViewAgeData" />

        <!-- Edit Profile Button -->
        <FrameLayout
            android:id="@+id/frameLayoutEditProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_rectangle_without_stroke"
            app:layout_constraintTop_toBottomOf="@+id/textViewAddressData"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:clickable="true"
            android:layout_margin="20dp"
            android:focusable="true"
            android:onClick="onEditProfileClick">

            <TextView
                android:id="@+id/textViewEditProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_profile"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="#0076AB"
                android:padding="16dp"/>

        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <FrameLayout
        android:id="@+id/frameLayouIntialLetter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textViewIntialLetter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:padding="16dp"/>

    </FrameLayout>

    <!-- IAL2 -->
    <!-- We need to use the verificationStatus for the below  FrameLayout  -->

    <FrameLayout
        android:id="@+id/frameLayoutIAL2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/profile_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <TextView
            android:id="@+id/textViewIAL2Heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:text="@string/ial2_status_heading"
            android:textStyle="bold"
            android:textColor="#000000"
            android:padding="16dp" />

        <TextView
            android:id="@+id/textViewVerificationStatusData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:text="@string/ial2_never_verified"
            android:textStyle="bold"
            android:textColor="#000000"
            android:padding="16dp" />

    </FrameLayout>

    <!-- IAL2 Button -->

    <FrameLayout
        android:id="@+id/frameLayoutIAL2Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/frameLayoutIAL2"
        android:background="@drawable/rounded_rectangle_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clickable="true"
        android:layout_marginTop="0dp"
        android:layout_margin="10dp"
        android:focusable="true"
        android:onClick="onGetIAL2VerifiedClick">

        <TextView
            android:id="@+id/textViewIAL2Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/get_ial2_verified"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:padding="16dp"/>
    </FrameLayout>

    <!-- IAS Consent Button -->
    <FrameLayout
        android:id="@+id/frameLayoutIASConsentButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/frameLayoutIAL2Button"
        android:background="@drawable/rounded_rectangle_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clickable="true"
        android:layout_margin="10dp"
        android:focusable="true">

        <TextView
            android:id="@+id/textViewIASConsentButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IAS Consent"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:padding="16dp"/>
    </FrameLayout>

    <!-- Bottom Row: Developer Tools and Logout Buttons Side by Side -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomButtonRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:id="@+id/frameLayoutDeveloperTools"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_rectangle_blue"
            android:clickable="true"
            android:focusable="true"
            android:layout_margin="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/frameLayoutLogout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/textViewDeveloperTools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/developer_tools"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:padding="16dp"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameLayoutLogout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_rectangle_blue"
            android:clickable="true"
            android:focusable="true"
            android:layout_margin="20dp"
            app:layout_constraintStart_toEndOf="@+id/frameLayoutDeveloperTools"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="onEditProfileClick">

            <TextView
                android:id="@+id/textViewProceed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/logout"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:padding="16dp"/>
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
