<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:id="@+id/medicine_overview_view"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/medicineTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medicine"
        android:textStyle="bold"
        android:textColor="#0076AB"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guidelineTitleRx"/>
    <TextView
        android:id="@+id/medicationTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Medication"
        android:textColor="#0076AB"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/medicineTitleTextView"
        app:layout_constraintEnd_toStartOf="@+id/guidelineTitleRx"/>

    <TextView
        android:id="@+id/startDateTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Start Date"
        android:textColor="#0076AB"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/guidelineTitleRx"
        app:layout_constraintTop_toBottomOf="@+id/medicineTitleTextView"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTitleRx"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <TextView
        android:id="@+id/medicationValueTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/medicationTitleTextView"/>

    <TextView
        android:id="@+id/startDateValueTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/guidelineValueRx"
        app:layout_constraintTop_toTopOf="@+id/medicationValueTextView"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineValueRx"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <TextView
        android:id="@+id/statusTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textColor="#0076AB"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/medicationValueTextView"/>

    <TextView
        android:id="@+id/endDateTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="End Date"
        android:textColor="#0076AB"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/guidelineTitleRefills"
        app:layout_constraintTop_toTopOf="@+id/statusTitleTextView"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTitleRefills"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <TextView
        android:id="@+id/statusValueTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statusTitleTextView"/>

    <TextView
        android:id="@+id/refillsRemainingValueTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/guidelineValueRefills"
        app:layout_constraintTop_toTopOf="@+id/statusValueTextView"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineValueRefills"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTitleDatePrescribed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <TextView
        android:id="@+id/endDateValueTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/guidelineValueDatePrescribed"
        app:layout_constraintTop_toTopOf="@+id/refillsRemainingValueTextView"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineValueDatePrescribed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <LinearLayout
        android:id="@+id/organization_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/refillsRemainingValueTextView">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_data_connection"/>
        <TextView
            android:id="@+id/organization_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:text="" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/note_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/organization_ll"/>

</androidx.constraintlayout.widget.ConstraintLayout>
